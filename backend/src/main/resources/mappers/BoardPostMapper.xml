<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="finance.board.mapper.BoardPostMapper">

    <resultMap id="BoardPostResultMap" type="finance.board.domain.BoardPost">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="writer" column="writer"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- 목록 조회 -->
    <select id="findAll" resultMap="BoardPostResultMap">
        SELECT
        id,
        title,
        content,
        writer,
        created_at
        FROM board_post
        ORDER BY id DESC
    </select>

    <!-- 단건 조회 -->
    <select id="findById" parameterType="long" resultMap="BoardPostResultMap">
        SELECT
        id,
        title,
        content,
        writer,
        created_at
        FROM board_post
        WHERE id = #{id}
    </select>

    <!-- 글 입력 -->
    <insert id="insert"
            parameterType="finance.board.domain.BoardPost"
            useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO board_post
        (title, content, writer, created_at)
        VALUES
        (#{title}, #{content}, #{writer}, NOW())
    </insert>

</mapper>